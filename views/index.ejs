<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('./Partials/head.ejs') %>

</head>
<body>

    <%- include('./Partials/nav.ejs') %>

    <div class="Blogs content">
        <h2>All blogs</h2>

        <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
            <% }) %>
        <% } else {%> 
            <p>There is no blogs...</p>
        <% } %>
    </div>

    <%- include('./Partials/footer.ejs') %>

</body>
</html>